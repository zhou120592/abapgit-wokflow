MODULE user_command_0100 INPUT.
  code_ok = ok_code.
  CLEAR: ok_code.
  CASE code_ok.
    WHEN 'EXIT' OR 'CANC'.
      LEAVE PROGRAM.
    WHEN 'BACK'.
      SET SCREEN 0.

  ENDCASE.
ENDMODULE.
